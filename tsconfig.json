{
  "compilerOptions": {
    /* === 基本設定 === */
    "target": "ES2022",
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    /* === Next.js & Bundler 設定 === */
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "incremental": true,
    "isolatedModules": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "moduleDetection": "force",
    /* === AIコード互換用（デコレータ・クラス設定） === */
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    /* === パスエイリアス（修正箇所） === */
    /* srcフォルダを使わない構成に合わせて "./*" に戻しました */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    /* === Next.js プラグイン === */
    "types": [
      "node"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "supabase"
  ]
}
