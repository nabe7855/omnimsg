{
  "compilerOptions": {
    /* === 基本設定 === */
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    /* === Next.js 用 === */
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "incremental": true,
    "isolatedModules": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,

    /* === デコレーター・クラスフィールド === */
    "experimentalDecorators": true,
    "useDefineForClassFields": false,

    /* === パスエイリアス === */
    "paths": {
      "@/*": ["./*"]
    },

    /* === Next.js の型補完 === */
    "types": ["node"],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],

  "exclude": ["node_modules"]
}
